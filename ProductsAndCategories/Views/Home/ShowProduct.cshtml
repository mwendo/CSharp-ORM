@model Association
<center>
    <h1 class="p-4">@ViewBag.SpecificProduct.Name</h1>
</center>

<div class="main-content">
    <div class="current-categories col-6">
        <h3>Categories:</h3>
        <ul>
        @foreach(var c in ViewBag.SpecificProduct.Associations)
        {
                <li>@c.Category.Name</li>
        }
        </ul>
    </div>
    <div class="list-of-categories col-6">
        <h4>Add Category: </h4>
        <form action="/add/category/to/product" method="post">
            <div class="form-group">
                <select class="form-control" asp-for="CategoryId">
                    @foreach(var u in ViewBag.ListCategories)
                    {
                        <option value="@u.CategoryId">@u.Name</option>
                    }
                </select>
                <input type="hidden" value="@ViewBag.SpecificProduct.ProductId" asp-for="ProductId">
            </div>
            <button class="btn btn-primary">Add</button>
        </form>
    </div>
</div>