@model Entertainment

<div class="dashboard">
    <h1>Dojo Activity Center</h1>
    <a href="/dashboard">Home</a>
    <a href="/logout">Log out</a>
</div>

<h2>Create an Activity</h2>
<div>
    <form action="/addEntertainment" method="post">
        <div class="form-group">
            <span asp-validation-for="Title"></span>
            <label for="Title">Title: </label>
            <input asp-for="Title" class="form-control">
        </div>
        <div class="form-group">
            <span asp-validation-for="Time"></span>
            <label for="Time">Time: </label>
            <input asp-for="Time" class="form-control">
        </div>
        <div class="form-group">
            <span asp-validation-for="EntertainmentDate"></span>
            <label for="EntertainmentDate">Date: </label>
            <input asp-for="EntertainmentDate" class="form-control">
        </div>
        <div class="form-group">
            <span asp-validation-for="Duration"></span>
            <label for="Duration">Duration: </label>
            <input asp-for="Duration" class="form-control">
        </div>
        <div class="form-group">
            <span asp-validation-for="DurationAmount"></span>
            <label for="DurationAmount"></label>
            <select asp-for="DurationAmount">
                <option value="Minutes">Minutes</option>
                <option value="Hours">Hours</option>
                <option value="Days">Days</option>
            </select>
        </div>
        <div class="form-group">
            <span asp-validation-for="Description"></span>
            <label for="Description">Description: </label>
            <textarea asp-for="Description" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <input type="hidden" asp-for="UserId" value="@ViewBag.Id">
        <input type="submit" value="Add Event" class="btn btn-primary">
    </form>
</div>